<h1>Pricing</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price (cents)</th>
      <th>Interval</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.name %></td>
        <td><%= plan.price_cents %></td>
        <td><%= plan.interval %></td>
        <td>
          <%= link_to 'Show', plan %> |
          <%= link_to 'Edit', edit_plan_path(plan) %> |
          <%= link_to 'Destroy', plan, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Plan', new_plan_path %>
