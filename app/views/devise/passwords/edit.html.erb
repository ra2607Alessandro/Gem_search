<div class="max-w-md mx-auto bg-white shadow p-6 rounded-lg mt-12 space-y-6">
  <h1 class="text-2xl font-bold text-gray-900 text-center">Change your password</h1>

  <% if resource.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="text-sm text-red-700">
        <ul class="list-disc list-inside">
          <% resource.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <div>
      <%= f.label :password, "New password", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.password_field :password, autocomplete: "new-password",
            class: "w-full border border-gray-300 rounded-lg p-3 bg-white focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :password_confirmation, "Confirm new password", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password",
            class: "w-full border border-gray-300 rounded-lg p-3 bg-white focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div class="mt-4">
      <%= f.submit "Change my password", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2.5 rounded-lg" %>
    </div>
  <% end %>

  <div class="text-center text-sm">
    <%= link_to "Back to log in", new_session_path(resource_name), class: "text-blue-600 hover:text-blue-800 underline" %>
  </div>
</div>

